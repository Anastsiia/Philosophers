#ifndef PHILO_H
# define PHILO_H

# include <pthread.h>
# include <unistd.h>
# include <stdio.h>
# include <sys/time.h>
# include <stdlib.h>

typedef struct s_philo
{
	pthread_t		thread;
	int				num; //philo_num
	int				meal; //eat_times
	int				l_fork; //left_fork
	int				r_fork; //right_fork
	unsigned long	last_meal_time; //last_eat_time
	struct s_game	*game;
}				t_philo;

typedef struct s_game
{
	int				philo_num;	//num_of_philos;
	int				die; 		//time_to_die
	int				eat;		//time_to_eat
	int				sleep;		//time_to_sleep
	int				time_to_eat;//num_of_times_to_eat
	unsigned long	time_start;	//start_time
	pthread_mutex_t	*fork;
	t_philo			*philo;
	int				dead;
	int				full_philos;	
}				t_game;

int				ft_atoi(char *str);
int				ft_check_args(int argc, char **argv, t_game *game);
int				ft_print_dop(t_philo *philo, int msg);
int				ft_print(t_philo *philo, int msg);
unsigned long	ft_now_time(void);

void			ft_init_philo(t_game *game, int count);
int				ft_init(t_game *game);
int				ft_live(t_philo *philo);
void			*ft_philo_live(t_philo *philo);
void			ft_pthread_create(t_game *game);

void			ft_wait(int till_time);
int				ft_check_status(t_game *game);
void			ft_join(t_game *game);

#endif

//take 1
//eat 2
//sleep 3
//thinking 4
//dead 0
